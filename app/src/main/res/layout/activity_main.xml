<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:focusable="true"
        tools:context=".MainActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="4dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/lnrLength"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_lnr"
                            android:tag="Length"
                            android:onClick="lnrClick"
                            android:layout_weight="1"
                            android:layout_margin="1dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_layout">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_square_foot_24"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lenght"
                                android:layout_marginTop="2dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lnrArea"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:onClick="lnrClick"
                            android:tag="Area"
                            android:layout_weight="1"
                            android:layout_margin="1dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_layout">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_square_24"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Area"
                                android:layout_marginTop="2dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lnrMass"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:onClick="lnrClick"
                            android:tag="Mass"
                            android:layout_weight="1"
                            android:layout_margin="1dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_layout">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_fitness_center_24"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mass"
                                android:layout_marginTop="2dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lnrDensity"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:onClick="lnrClick"
                            android:tag="Density"
                            android:layout_weight="1"
                            android:layout_margin="1dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_layout">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_apps_24"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Density"
                                android:layout_marginTop="2dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/lnrVolume"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:onClick="lnrClick"
                            android:tag="Volume"
                            android:layout_weight="1"
                            android:layout_margin="1dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_layout">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_hourglass_bottom_24"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Volume"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lnrPressure"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:onClick="lnrClick"
                            android:tag="Pressure"
                            android:layout_weight="1"
                            android:layout_margin="1dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_layout">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_compress_24"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pressure"
                                android:layout_marginTop="2dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lnrPower"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:onClick="lnrClick"
                            android:tag="Power"
                            android:layout_weight="1"
                            android:layout_margin="1dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_layout">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_fitness_center_24"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Power"
                                android:layout_marginTop="2dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lnrSpeed"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:onClick="lnrClick"
                            android:tag="Speed"
                            android:layout_weight="1"
                            android:layout_margin="1dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_layout">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_speed_24"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Speed"
                                android:layout_marginTop="2dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/lnrData"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:onClick="lnrClick"
                            android:tag="Data"
                            android:layout_weight="1"
                            android:layout_margin="1dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_layout">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_filter_24"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Data"
                                android:layout_marginTop="2dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lnrEnergy"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:onClick="lnrClick"
                            android:tag="Energy"
                            android:layout_weight="1"
                            android:layout_margin="1dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_layout">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_energy_24"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Energy"
                                android:layout_marginTop="2dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lnrCurrent"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:onClick="lnrClick"
                            android:tag="Current"
                            android:layout_weight="1"
                            android:layout_margin="1dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_layout">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_electric_energy_24"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Current"
                                android:layout_marginTop="2dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lnrTemperature"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:onClick="lnrClick"
                            android:tag="Temperature"
                            android:layout_weight="1"
                            android:layout_margin="1dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_layout">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_thermostat_24"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Temp"
                                android:layout_marginTop="2dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:text="Convert Lenght"
                android:textSize="18sp"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtf_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    style="@style/CustomOutlinedBox"
                    app:boxCornerRadiusBottomEnd="1dp"
                    app:boxCornerRadiusBottomStart="1dp"
                    app:boxCornerRadiusTopEnd="1dp"
                    app:boxCornerRadiusTopStart="1dp"
                    app:endIconDrawable="@drawable/ic_edit_24">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/txt_input_padding_ver"
                        android:paddingBottom="@dimen/txt_input_padding_ver"
                        android:inputType="numberDecimal"
                        android:maxLength="40"
                        android:text="0"
                        android:textColorHint="#70707A" />
                </com.google.android.material.textfield.TextInputLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtf_unit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5"
                        style="@style/CustomOutlinedBox"
                        app:boxCornerRadiusBottomEnd="1dp"
                        app:boxCornerRadiusBottomStart="1dp"
                        app:boxCornerRadiusTopEnd="1dp"
                        app:boxCornerRadiusTopStart="1dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtUnit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/txt_input_padding_ver"
                            android:paddingBottom="@dimen/txt_input_padding_ver"
                            android:focusable="false"
                            android:inputType="none"
                            android:text="ft"
                            android:textColorHint="#70707A" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spnUnits"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:entries="@array/lenght_units"
                        android:layout_marginTop="32dp"/>
                </FrameLayout>

            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lstUnits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu"/>
</androidx.drawerlayout.widget.DrawerLayout>